server {
	server_name      localhost
	listen 0.0.0.0:80
	root /Users/kcedra/webserver/directory_for_tests/devAid-v1.1

    location / {
       index index.html
       error_page custom_error
       client_body_size 	50
    }
}

server {
    server_name      second
	listen 0.0.0.0:8000

	root /Users/kcedra/webserver/YoupiBanane

    location / {
        root ./
        index youpi.bad_extension
        allow_methods GET
    }
    location /post_body {
        root ./post_directory
        index index.html
        allow_methods GET POST
        client_body_size    100
    }
    location /directory {
        root ./
        index youpi.bad_extension
        allow_methods GET
    }
    location /directory/test {
        root ./tournament/delete_dir
        index   test3.json
        allow_methods GET POST DELETE
    }
}

