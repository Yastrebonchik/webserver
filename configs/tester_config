server {
	server_name      default_server
	listen 0.0.0.0:8002
	root /Users/kcedra/webserver/YoupiBanane

    location / {
        root /
        index youpi.bad_extension
        allow_methods GET
    }
    location /post_body {
        root /post_directory
        index index.html
        allow_methods GET POST
        client_body_size    100
    }
    location /directory {
        root /
        index youpi.bad_extension
        redirection /
        allow_methods GET
    }
}

server {

	listen 0.0.0.0:80

	server_name      second

	root /Users/kcedra/webserver/directory_for_tests/devAid-v1.1

	index index.html
	error_page custom_error
	client_body_size 	50
	allow_methods GET POST
}

server {
	server_name      third_server
	listen 0.0.0.0:8000
	root /Users/kcedra/webserver/directory_for_tests/tournament

	index compete.html
}

server {
	server_name      fourth_server
	listen 0.0.0.0:8004
	root /Users/kcedra/webserver/directory_for_tests/newsfeed

	index index.html
}

server {
	listen 0.0.0.0:443

	server_name      fifth

	root /Users/kcedra/webserver

    location / {
        root /
        index index.html
        listing yes
        allow_methods GET POST
    }
    location /delete {
        root /delete_dir
        allow_methods GET POST DELETE
    }
	error_page custom_error
	allow_methods GET POST
}