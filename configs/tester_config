}

server {
	server_name      fourth_server
	listen 0.0.0.0:8004
	root /Users/kcedra/webserver/directory_for_tests/newsfeed

	index index.html
}

server {
	listen 0.0.0.0:443

	server_name      fifth

	root /Users/kcedra/webserver

    location / {
        root ./
        index index.html
        listing yes
        allow_methods GET POST
    }
    location /delete {
        root ./delete_dir
        allow_methods GET POST DELETE
    }
	error_page custom_error
	allow_methods GET POST
}